@{
    ViewData["Title"] = "Quadratic Equation Solver";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label for="a">Coefficient a:</label>
        <input type="text" class="form-control" name="a" placeholder="Enter a">
    </div>
    <div class="form-group">
        <label for="b">Coefficient b:</label>
        <input type="text" class="form-control" name="b" placeholder="Enter b">
    </div>
    <div class="form-group">
        <label for="c">Coefficient c:</label>
        <input type="text" class="form-control" name="c" placeholder="Enter c">
    </div>
    <button type="submit" class="btn btn-primary">Solve</button>
</form>

@if (ViewBag.Root1 != null)
{
    <h3>Root 1: @ViewBag.Root1</h3>
    <h3>Root 2: @ViewBag.Root2</h3>
}
